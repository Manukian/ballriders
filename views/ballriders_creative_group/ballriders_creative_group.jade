extends ../layout

block head
    link(rel="stylesheet", href="bootstrap-3.3.6-dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="stylesheets/ballriders_creative_group/ballriders_creative_group.css")
block main
    include ../topside_menu_mobile.jade
    header
        .topside_menu_mobile_toggle
        .main_header
            .menu_toggle_black.hidden-lg.hidden-md
            .menu_close.hidden-lg.hidden-md
            ul.menu.hidden-sm.hidden-xs
                li.menu_item
                  a(href='/ballriders_creative_group/digital') Digital
                li.menu_item
                  a(href='/ballriders_creative_group/fashion') Fashion
                li.menu_item
                  a(href='/ballriders_creative_group/web') Web
                li.menu_item
                  a(href='/ballriders_creative_group/music') Music
            ul.mobile_menu.hidden-lg.hidden-md
                li.mobile_menu_item
                  a(href='/ballriders_creative_group/digital').mobile_menu_link Digital
                li.mobile_menu_item
                  a(href='/ballriders_creative_group/fashion').mobile_menu_link Fashion
                li.mobile_menu_item
                  a(href='/ballriders_creative_group/web').mobile_menu_link Web
                li.mobile_menu_item
                  a(href='/ballriders_creative_group/music').mobile_menu_link Music
    section.intro
    .arrow_down
      img(src="../../images/arrow_down_pure.svg", alt="").arrow_img
    
    section.projects
        .container-fluid
          .row
            .col-xs-12.col-sm-6.col-md-6.col-lg-3
              .project_wrapper
                a(href="").project_link
                  img(src="../../images/1.png", alt="")
                  .project_description
                    .project_title Toothbrush
                    .year _16
            .col-xs-12.col-sm-6.col-md-6.col-lg-3
              .project_wrapper
                a(href="").project_link
                  img(src="../../images/2.png", alt="")
                  .project_description
                    .project_title Women Bag
                    .year _16
            .col-xs-12.col-sm-6.col-md-6.col-lg-3
              .project_wrapper
                a(href="").project_link
                  img(src="../../images/IMG_8317.jpg", alt="")
                  .project_description
                    .project_title 'Art Is In Our Hands'
                    .year _16
            .col-xs-12.col-sm-6.col-md-6.col-lg-3
              .project_wrapper
                a(href="").project_link
                  img(src="../../images/4.png", alt="")
                  .project_description
                    .project_title Shadow Ball
                    .year _16

    .arrow_up
      img(src="../../images/arrow_up_pure.svg", alt="").arrow_img
