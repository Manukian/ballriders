extends ../layout

block head
    style.
        html,
        body,
        div,
        a,
        img,
        ul,
        li,
        main {
          margin: 0;
          padding: 0;
          border: 0;
          font-size: 100%;
          font: inherit;
          vertical-align: baseline;
        }

        main {
          display: block;
        }

        body {
          line-height: 1;
        }

        ul {
          list-style: none;
        }

        html {
          font-family: sans-serif;
          -ms-text-size-adjust: 100%;
          -webkit-text-size-adjust: 100%;
        }

        a {
          background-color: transparent;
        }

        img {
          border: 0;
        }

        svg:not(:root) {
          overflow: hidden;
        }

        @font-face {
          font-family: proxima-nova;
          src: url(../../fonts/ProximaNova/ProximaNovaRegular.otf) format("opentype");
        }

        @font-face {
          font-family: proxima-nova-light;
          font-weight: light;
          src: url(../../fonts/ProximaNova/ProximaNovaLight.otf) format("opentype");
        }

        body {
          -webkit-font-smoothing: antialiased;
          font-family: proxima-nova;
          background-color: #f9f9f9;
        }

        .menu_wrapper {
          font-family: Neue;
          position: relative;
          width: 100%;
          height: 10%;
          background-color: #f9f9f9;
          text-align: center;
        }

        .menu_items {
          display: inline-block;
          width: 33.3%;
          height: 70px;
        }

        .menu_items > a {
          padding-top: 30px;
          box-sizing: border-box;
          display: inline-block;
          width: 100%;
          height: 70px;
          text-align: center;
          text-decoration: none;
          color: #777;
          font-size: 10px;
          text-transform: uppercase;
          word-spacing: 2px;
          vertical-align: middle;
        }

        .coming_soon a:after {
          content: " (Coming on June 23)";
          width: 100%;
          display: inline-block;
          text-transform: none;
          font-size: 12px;
          color: #FF3399;
          margin-top: 5px;
        }

        .section_svg {
          width: 100%;
          height: 100%;
        }

        #home_section {
          position: relative;
          height: 679px;
          width: 100%;
          background-color: #f9f9f9;
          text-align: center;
        }

        #home_section .arrow_pure {
            position: absolute;
            bottom: 0;
            left: 50%;
            margin-left: -34px;
        }

        .circle_wrapper {
          position: relative;
          width: 100%;
          height: 100%;
        }

        .circle {
          position: absolute;
          top: 10%;
          width: 100%;
          height: 80%;
          text-align: center;
        }

        .arrow_pure {
          height: 10%;
          display: inline-block;
        }

        .arrow_pure img {
          height: 100%;
        }

        .keybord {
          position: absolute;
          right: 20px;
          bottom: 15px;
          display: inline-block;
        }

        .keybord img {
          width: 120px;
        }
        
        @media (max-width:1050px) {
          li.menu_items {
            display: none;
          }

          .topside_menu_mobile_toggle {
            display: inline-block;
          }
        }
    meta(name="keywords" content="freestyle basketball soaring balls syndicate ballride style performance choreography wedding show Vaggi баскетбольный фристайл свадебный перфоманс выступление детское шоу интерактив хореография мяч Вагги")
    meta(name="description" content="Discover one of the best freestyle basketballe team. Get the best entertainment show for your event")
block main
    main#fullpage
        include ../topside_menu_mobile.jade
        .menu_big#menu
