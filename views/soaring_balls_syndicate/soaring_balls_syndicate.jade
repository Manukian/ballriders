                li.menu_big_item(data-menuanchor="about")
                    a.menu_big_item_link(href="#about").color3 A b o u t
                li.menu_big_item(data-menuanchor="works")
                    a.menu_big_item_link(href="#works").color4 W o r k s
                li.menu_big_item(data-menuanchor="clients")
                    a.menu_big_item_link(href="#clients").color5 C l i e n t s
                li.menu_big_item(data-menuanchor="about")
                    a.menu_big_item_link(href="#service").color6 S e r v i c e
                li.menu_big_item(data-menuanchor="contact")
